<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProdukActivity">

    <LinearLayout
        android:id="@+id/ly_back"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="4dp"
            android:background="@drawable/arrow_back"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/ly_back"
        android:layout_margin="12dp">

        <TextView
            android:id="@+id/tv_pagar_dorong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESAIN PAGAR DORONG"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pagar_dorong_satu"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:padding="12dp"
                app:srcCompat="@drawable/pd2" />

            <ImageView
                android:id="@+id/img_pagar_dorong_dua"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:padding="12dp"
                app:srcCompat="@drawable/pd1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_kanopi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESAIN KANOPI"
            android:textColor="@color/black"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_kanopi_satu"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:padding="12dp"
                app:srcCompat="@drawable/kn2"
                />

            <ImageView
                android:id="@+id/img_kanopi_dua"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:padding="12dp"
                app:srcCompat="@drawable/kn1" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_pagar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESAIN PAGAR"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pagar_satu"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:padding="12dp"
                app:srcCompat="@drawable/pg1" />

            <ImageView
                android:id="@+id/img_pagar_dua"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_weight="1"
                android:padding="12dp"
                app:srcCompat="@drawable/pg2" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>